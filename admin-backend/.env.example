# Admin Backend Configuration

# Groq API Configuration (Get free key from https://console.groq.com/keys)
GROQ_API_KEY=your_groq_api_key_here

# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Admin User Credentials
ADMIN_EMAIL=admin@legally.com
ADMIN_PASSWORD=your_secure_password

# Server Configuration
ADMIN_API_PORT=8000
ENV=production

# CORS Configuration (add your Netlify URL in production)
CORS_ORIGINS=https://your-netlify-app.netlify.app,http://localhost:5173,http://localhost:8081

# Database Configuration (optional, for future use)
DATABASE_URL=sqlite:///./db.sqlite3
